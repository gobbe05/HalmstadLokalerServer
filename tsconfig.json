{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./", // Ensure this points to the common parent directory of all TypeScript files
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",      // Include all files in the src folder
    "jest.setup.ts"  // Include the jest setup file explicitly
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
